@using Byte.Blog.Framework.Web
@model global::Byte.Blog.Rendering.Models.EntryViewModel
@{
    Layout = "~/Areas/Rendering/Views/Shared/_Layout.cshtml";
}

@Html.Partial("Entry")
@Html.Partial("Disqus", Model.DisqusThread)

@section FooterScripts {

    <script src="@Url.Content("~/rendering/assets/scripts/EntryView.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/rendering/assets/scripts/DisqusThreadView.js")" type="text/javascript"></script>
    
    <script type="text/javascript">

        $(document).ready(function () {

            var entryView = new window.EntryView({
                el: $('.entry')
            });

            var disqusThreadView = new window.DisqusThreadView({
                el: $('#disqus_thread')
            });

        });

    </script>
}