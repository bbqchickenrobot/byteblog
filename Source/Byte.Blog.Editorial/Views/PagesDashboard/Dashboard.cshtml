@using Byte.Blog.Editorial.Models
@model global::Byte.Blog.Editorial.Models.PageDashboardQueryModel

<div id="page-dashboard-query-settings">
    @Html.HiddenFor(m => m.PageNumber)
    @Html.HiddenFor(m => m.PageSize)
</div>

<h2>Pages</h2>

<table class="table table-striped" id="page-dashboard-table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Color</th>
            <th>Slug</th>
            <th>Modified</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section FooterScripts 
{
    <script src="@Url.Content("~/editorial/assets/scripts/PageEditModel.js")" type="text/javascript"></script>

    <script type="text/template" id="page-dashboard-item-template">
        @Html.Partial("ItemTemplate", new PageEditModel())
    </script>
    
    <script type="text/javascript">

        $(function () {

            var pageDashboardView = new window.DashboardView({
                el: $('#page-dashboard-table'),
                model: window.PageEditModel,
                itemTemplate: $('#page-dashboard-item-template'),
                fetchUrl: '@Url.Action("fetch")',
                pageNumber: $('#PageNumber').val(),
                pageSize: $('#PageSize').val()
            });

        });

    </script>
}